{
	"extends": [
		"config:base"
	],
	"bumpVersion": "minor",
	"helmfile": {
		"fileMatch": ["^helm\\\/releases\\\/.*\\.yaml$"]
	},
	"github-actions": {
		"fileMatch": ["^\\.github\\\/workflows\\\/.*\\.ya?ml$"]
	},
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false
    }
	],
	"ignoreTests": false,
	"ignorePaths": ["charts/pyrra/**"]
}
